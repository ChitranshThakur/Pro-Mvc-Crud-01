@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container pt-3">
    <div class="row p-3">
        <div class="col-6" >
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-person-plus"></i> &nbsp;Create Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">@obj.Name</td>
                <td width="40%">@obj.DisplayOrder</td>
                <td width="20%">
                    <a asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

